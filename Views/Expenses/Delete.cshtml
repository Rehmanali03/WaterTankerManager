@model WaterTankerManager.Models.ExpenseEntry

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container mt-4">
    <h3>Are you sure you want to delete this expense?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ExpenseName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ExpenseName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ExpensePrice)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ExpensePrice)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@model WaterTankerManager.Controllers.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="d-flex align-items-center mb-4">
               <a asp-action="Index" class="btn btn-outline-secondary me-3 btn-icon small border-0">
                   <i class="fa-solid fa-arrow-left"></i>
               </a>
               <div>
                   <h2 class="fw-bold text-dark mb-0">Edit User</h2>
                   <p class="text-secondary mb-0">Update user details and access</p>
               </div>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold text-secondary small text-uppercase">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control bg-light border-0 py-3" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold text-secondary small text-uppercase">New Password (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fa-solid fa-lock text-muted"></i></span>
                                <input asp-for="NewPassword" class="form-control bg-light border-0 py-3" placeholder="Leave blank to keep current" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small mt-1"></span>
                        </div>
                        
                        <div class="mb-5">
                            <label asp-for="Role" class="form-label fw-bold text-secondary small text-uppercase">System Role</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fa-solid fa-user-tag text-muted"></i></span>
                                <select asp-for="Role" class="form-select bg-light border-0 py-3 text-secondary">
                                    <option value="User">User (Standard Access)</option>
                                    <option value="Admin">Admin (Full Access)</option>
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-3 fw-bold shadow-sm">
                                <i class="fa-solid fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

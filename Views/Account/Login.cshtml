@model WaterTankerManager.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="login-body">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="glass-card">
                    <div class="login-header">
                        <div class="login-icon">
                            <i class="fa-solid fa-droplet text-white"></i>
                        </div>
                        <h2 class="login-title">WaterTanker</h2>
                        <p class="mb-0 text-white-50">Management System</p>
                    </div>
                    
                    <div class="login-form-container">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                            
                            <div class="premium-input-group">
                                <input asp-for="Email" class="premium-input" placeholder=" " autocomplete="username" aria-required="true" />
                                <i class="fa-solid fa-envelope premium-input-icon"></i>
                                <label asp-for="Email" class="position-absolute text-muted" style="top: 1rem; left: 3rem; pointer-events: none; transition: 0.2s; opacity: 0.7;">Email Address</label>
                                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="premium-input-group">
                                <input asp-for="Password" class="premium-input" placeholder=" " autocomplete="current-password" aria-required="true" />
                                <i class="fa-solid fa-lock premium-input-icon"></i>
                                <label asp-for="Password" class="position-absolute text-muted" style="top: 1rem; left: 3rem; pointer-events: none; transition: 0.2s; opacity: 0.7;">Password</label>
                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="RememberMe" />
                                    <label class="form-check-label text-muted" asp-for="RememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a href="#" class="text-primary text-decoration-none small fw-bold">Forgot Password?</a>
                            </div>
                            
                            <button id="login-submit" type="submit" class="premium-btn">
                                <i class="fa-solid fa-sign-in-alt me-2"></i> Log In
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="text-center mt-4 text-muted small">
                    &copy; @DateTime.Now.Year Water Tanker Manager. All rights reserved.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Floating label logic for placeholder
        document.querySelectorAll('.premium-input').forEach(input => {
            const label = input.nextElementSibling.nextElementSibling;
            
            // Adjust label based on value or focus
            const updateLabel = () => {
                if (input.value || document.activeElement === input) {
                    label.style.top = '-0.6rem';
                    label.style.left = '1rem';
                    label.style.fontSize = '0.75rem';
                    label.style.background = 'white';
                    label.style.padding = '0 5px';
                    label.style.opacity = '1';
                    label.style.color = 'var(--primary-color)';
                } else {
                    label.style.top = '1rem';
                    label.style.left = '3rem';
                    label.style.fontSize = '1rem';
                    label.style.background = 'transparent';
                    label.style.padding = '0';
                    label.style.opacity = '0.7';
                    label.style.color = '#6c757d';
                }
            };
            
            input.addEventListener('focus', updateLabel);
            input.addEventListener('blur', updateLabel);
            input.addEventListener('input', updateLabel);
            
            // Initial check
            updateLabel();
        });
    </script>
}
